/*---------sum of all even number------*/
int evenadd(int x)
{
  int sum=0;
  for(int i=2; i<=x; i=i+2)
    {
      sum=sum+i;
    }
  return sum;
}
int main()
{
  int n;
  cin>>n;
  int sum= evenadd(n);
  cout<<"sum of all even number:"<<sum;
  return 0;
}
